<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Style x:Key="grid-content" TargetType="Grid">
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="grid-row" TargetType="Grid">
        <Setter Property="Margin" Value="0 0 0 5" />
    </Style>
    
    <Style x:Key="stack-panel-row" TargetType="StackPanel">
        <Setter Property="Margin" Value="0 0 0 5" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type ui:Button}}" TargetType="ui:Button">
        <Setter Property="Margin" Value="0 0 5 0" />
        <Setter Property="Padding" Value="10 5" />
    </Style>

    <Style BasedOn="{StaticResource {x:Type ui:TextBox}}" TargetType="ui:TextBox">
        <Setter Property="ClearButtonEnabled" Value="False"/>
        <Setter Property="Padding" Value="10 5" />
    </Style>
</ResourceDictionary>